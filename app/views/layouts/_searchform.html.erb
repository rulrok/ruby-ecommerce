<%= form_tag('/products/search', method: :get, id: :search_form, class: 'form-horizontal form-search', role: :search) do %>
    <div class="row">
      <div class="col-lg-12">

        <div class="form-group">
          <div class="input-group">
            <% session[:placeholder] ||= ['Search for...', 'What are you looking for today?', 'We have what you need!'].sample %>
            <%= search_field_tag :search, "", placeholder: session[:placeholder], class: 'form-control', autofocus: true, required: true, value: params[:search] %>
            <span class="input-group-btn">
              <%= select_tag :category, options_from_collection_for_select(@categories_search, "id", "name", selected: params[:category] || @category.nil? || @category.id), include_blank: 'All departments', class: 'btn btn-default', style: 'height: 34px;', selected: params[:category] %>
              <%= button_tag type: :submit, name: nil, class: 'btn btn-default', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i>".html_safe} do %>
                  <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
          <p class="text-left">
            <small><b>Search hints:</b>
              <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" data-title="Example: soup +tomatoes -bisque">You
                can exclude words with <strong>-</strong> and required others with
                <strong>+</strong></a></small>
          </p>
        </div>
      </div>
    </div>
<% end %>