<%= form_tag('/search', method: :get, class: 'form-horizontal form-search', role: :search) do %>
    <div class="row">
      <div class="col-lg-12">
        <div class="input-group">
          <% session[:placeholder] ||= ['Search for...', 'What are you looking for today?', 'We have what you need!'].sample %>
          <%= search_field_tag :search, "", placeholder: session[:placeholder], class: 'form-control' %>
          <div class="input-group-btn">
            <%= button_tag type: :submit, name: :search, class: 'btn btn-default' do %>
                <i class="fa fa-search"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>