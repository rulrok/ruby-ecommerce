<aside id="filters">
  <div class="col-md-3">
    <h2>Filters</h2>

    <div class="well">

      <ul class="list-unstyled">

        <li>
          <%= label_tag :new_products do %>
              <%= check_box_tag :new_products, true, params[:new_products], form: :search_form %>
              New products only
          <% end %>
        </li>

        <li>
          <%= label_tag :offers_only do %>
              <%= check_box_tag :offers_only, true, params[:offers_only], form: :search_form %>
              Offers only
          <% end %>
        </li>

        <li>
          <%= label_tag :with_discount do %>
              <%= check_box_tag :with_discount, true, params[:with_discount], form: :search_form %>
              With Discount First
          <% end %>
        </li>
        <li>
          <hr/>
        </li>
        <li>
          <%= label_tag :minimum_price %>
          <div class="input-group">
            <div class="input-group-addon input-sm"><i class="fa fa-dollar"></i></div>
            <%= number_field_tag :minimum_price, params[:minimum_price].to_i || 1, min: 0, step: 1, class: 'form-control input-sm', form: :search_form %>
            <div class="input-group-addon">.00</div>
          </div>
        </li>
        <li>
          <%= label_tag :maximum_price %>

          <div class="input-group">
            <div class="input-group-addon input-sm"><i class="fa fa-dollar"></i></div>
            <%= number_field_tag :maximum_price, params[:maximum_price].present? ? params[:maximum_price].to_i : 100, min: 1, step: 1, class: 'form-control input-sm', form: :search_form %>
            <div class="input-group-addon">.00</div>
          </div>
        </li>
        <li>
          <hr/>
        </li>
      </ul>
      <%= submit_tag "Apply filters", name: nil, class: 'btn btn-block btn-info', data: {:disable_with => 'Applying...'}, form: :search_form %>
    </div>
  </div>
</aside>