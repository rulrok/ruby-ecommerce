<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="item-container">
    <div class="row">
      <!-- Column for picture -->
      <div class="col-md-5">
        <div class="product service-image-left">
          <%= image_tag (@product.photo), alt: @product.product_name, class: 'center-block' %>
        </div>
      </div>
      <!-- Column for Product information at the right-->
      <div class="col-md-7">
        <div class="product-title"><%= @product.product_name %></div>
        <div class="product-desc"><%= @product.short_description %></div>
        <!-- TODO: Add rating capaility for products -->
        <!--<div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i>-->
        <!--<i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i>-->
        <!--</div>-->
        <hr>
        <div class="product-price"><%= number_to_currency(@product.price) %></div>
        <% if @product.unit_in_stock.zero? %>
            <div class="product-out-stock">Out of Stock</div>
        <% else %>
            <div class="product-stock">In Stock</div>
        <% end %>
        <hr>
        <div class="btn-group cart">
          <button type="button" class="btn btn-success">
            Add to cart
          </button>
        </div>
        <div class="btn-group wishlist">
          <button type="button" class="btn btn-danger">
            Add to favourites
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid">
    <div class="col-md-12 product-info">
      <ul id="myTab" class="nav nav-tabs nav_tabs">

        <li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
        <li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
        <li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>

      </ul>
      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade in active" id="service-one">

          <section class="container product-info">
            <%= @product.product_long_description %>
          </section>

        </div>
        <div class="tab-pane fade" id="service-two">

          <section class="container">

          </section>

        </div>
        <div class="tab-pane fade" id="service-three">

        </div>
      </div>
      <hr>
    </div>
  </div>
</div>
<p>
  <strong>Product name:</strong>
  <%= @product.product_name %>
</p>

<p>
  <strong>Product description:</strong>
  <%= @product.product_long_description %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

<p>
  <strong>Quantity per unit:</strong>
  <%= @product.quantity_per_unit %>
</p>

<p>
  <strong>Unit price:</strong>
  <%= @product.unit_price %>
</p>

<p>
  <strong>Discount:</strong>
  <%= @product.discount %>
</p>

<p>
  <strong>Discount available:</strong>
  <%= @product.discount_available %>
</p>

<p>
  <strong>Unit weight:</strong>
  <%= @product.unit_weight %>
</p>

<p>
  <strong>Unit in stock:</strong>
  <%= @product.unit_in_stock %>
</p>

<p>
  <strong>Product available:</strong>
  <%= @product.product_available %>
</p>


