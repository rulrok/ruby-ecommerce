<%= title "Home Page" %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Offers</h2>
  </div>
  <div class="container-fluid">
    <div id="custom_carousel" class="carousel slide" data-ride="carousel" data-interval="2500">
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <!-- Item -->
        <% @offers.each_with_index do |offer, index| %>
            <div class="item <%= 'active' if index == 0 %>">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-md-3">
                    <%= link_to(offer) do %>
                        <%= image_tag (offer.photo(:small)), class: 'img-responsive center-block' %>
                    <% end %>
                  </div>
                  <div class="col-md-9">
                    <%= link_to(offer) do %>
                        <h2><%= offer.product_name %></h2>
                    <% end %>
                    <%= offer.short_description %>
                    <p class="h3 discount-price"><%= number_to_currency offer.price_discount %></p>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
        <!-- End Item -->
      </div>
      <!-- End Carousel Inner -->
      <div class="controls">
        <ul class="nav">
          <% @offers.each_with_index do |offer, index| %>
              <li data-target="#custom_carousel" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>">
                <a href="#">
                  <%= image_tag offer.photo(:mini), class: 'img-responsive center-block', style: 'width: 50px; heigth: 50px;' %>
                  <small><%= offer.product_name %></small>
                </a>
              </li>
          <% end %>
        </ul>
      </div>
    </div>
    <!-- End Carousel -->

  </div>
  <div class="panel-footer"></div>
</div>



<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="text-uppercase">Popular Products</h2>
  </div>
  <% @popular_products.each_slice(3) do |slice| %>
      <div class="row row-eq-height well-lg">
        <% slice.each do |product| %>
            <div class="col-sm-6 col-md-4 row-eq-height">
              <div class="thumbnail">
                <%= link_to (product.category) do %>
                    <h4 class="text-center"><span class="label label-info"><%= product.category.name %></span>
                    </h4>
                <% end %>

                <h3 class="text-center">
                  <%= link_to (product) do %>
                      <% product.product_name %>
                  <% end %>
                </h3>

                <div class="mag1">
                  <%= image_tag product.photo, class: 'img-responsive img-rounded center-block', data: {toggle: 'magnify'} %>
                </div>

                <div class="caption">


                  <div>



                    <div class="price text-center">
                      <% if product.discount_available %>
                          <p class="h2">
                            <del>
                              <%= number_to_currency(product.price) %>
                            </del>
                            &nbsp;
                            <span class="discount-price"><%= number_to_currency(product.price_discount) %></span>
                          </p>
                      <% else %>
                          <p class="h2">
                            <%= number_to_currency(product.price) %>
                          </p>
                      <% end %>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <a class="btn btn-primary btn-block"><span class="fa fa-star-o"></span> Favourite
                        it</a>
                    </div>
                    <div class="col-md-6">
                      <a href="#" class="btn btn-success btn-block"><span class="fa fa-shopping-cart"></span>
                        Add to
                        cart</a>
                    </div>
                  </div>


                  <p class="caption"><%= product.short_description %></p>


                </div>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
  <div class="panel-footer"></div>
</div>
