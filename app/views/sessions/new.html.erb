<% content_for :modal_head do %>
    Login
    to <%= link_to :root do %><%= @ecommerce_name %>
    <% end %>
<% end %>
<div class="row">
  <div class="col-xs-6">
    <div class="well">
      <%= form_tag sessions_path method: :get do %>
          <div class="form-group">
            <%= label_tag :email %><br/>

            <%= text_field_tag :email, params[:email], type: :email, class: "form-control" %>
            <span class="help-block"></span>
          </div>
          <div class="form-group">
            <%= label_tag :password %>

            <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Please enter your password" %>
            <span class="help-block"></span>
          </div>
          <div id="loginErrorMsg" class="alert alert-error hide">Wrong username og password
          </div>
          <div class="checkbox">
            <label>
              <%= check_box_tag :remember, :remember %>
              <!--<input type="checkbox" name="remember" id="remember"> -->
              Remember login
            </label>

            <p class="help-block">(if this is a private computer)</p>
          </div>
          <%= submit_tag "Login", class: 'btn btn-success btn-block' %>
          <!--<button type="submit" class="btn btn-success btn-block">Login</button>-->
          <!--<a href="/forgot/" class="btn btn-default btn-block">Help to login</a>-->
      <% end %>
    </div>
  </div>
  <div class="col-xs-6">
    <p class="lead">Register now for <span class="text-success">FREE</span></p>
    <ul class="list-unstyled" style="line-height: 2">
      <li><span class="fa fa-check text-success"></span> See all your orders</li>
      <li><span class="fa fa-check text-success"></span> Fast re-order</li>
      <li><span class="fa fa-check text-success"></span> Save your favorites</li>
      <li><span class="fa fa-check text-success"></span> Fast checkout</li>
      <!--<li><a href="/read-more/"><u>Read more</u></a></li>-->
    </ul>
    <p><%= link_to 'Yes please, register now!', :sign_up, class: 'btn btn-info btn-block' %></p>
  </div>
</div>