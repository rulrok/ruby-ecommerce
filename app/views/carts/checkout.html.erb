<%= title 'Checking out products' %>

<div class="row">
  <div class="col-md-offset-1 col-md-10 col-md-offset-1">
    <%= form_tag '/cart/checkout', method: :post, class: 'form-horizontal', role: 'form' do |f| %>

        <fieldset>

          <!-- Form Name -->
          <legend>Shipping Address Details</legend>

          <!-- Text input-->
          <div class="form-group">
            <%= label_tag :street_line_1, 'Line 1', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= text_field_tag :street_line_1, nil, class: 'form-control', placeholder: 'Address Line 1' %>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">
            <%= label_tag :street_line_2, 'Line 2', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= text_field_tag :street_line_2, nil, class: 'form-control', placeholder: 'Address Line 2' %>
            </div>
          </div>

          <!-- Text input-->
          <div class="form-group">

            <%= label_tag :city, 'City', class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= text_field_tag :city, nil, class: 'form-control', placeholder: 'City' %>
            </div>

          </div>

          <!-- Text input-->
          <div class="form-group">
            <%= #f.fields_for :postalcode do |p|
            %>
            <%= label_tag :province, 'Province', class: 'col-sm-2 control-label' %>

            <div class="col-sm-4">
              <%= collection_select :province, :id, Province.all, :id, :full_name, {include_blank: true}, {class: 'chosen-select'} %>
              <%= #text_field_tag :province, nil, class: 'form-control', placeholder: 'Province'
              %>
            </div>

            <%= label_tag :postalcode_name, 'Postal code', class: 'col-sm-2 control-label' %>

            <div class="col-sm-4">
              <%= text_field_tag :postalcode_name, nil, class: 'form-control', placeholder: 'Postal code' %>
            </div>
            <% #end
            %>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="pull-right">
                <!--<button type="submit" class="btn btn-default">Cancel</button>-->
                <%= submit_tag :Proceed, class: 'btn btn-primary btn-large' %>
              </div>
            </div>
          </div>
        </fieldset>
    <% end %>
  </div>
</div>
<hr>
