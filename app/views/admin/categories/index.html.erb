<p id="notice"><%= notice %></p>

<h1>Listing Admin Categories</h1>
<br>
<div class="form-inline">
  <div>
    <div class="form-group">
      <%= search_field_tag :search, "", placeholder: 'Search...', id: 'category-search', class: 'form-control ' %>
    </div>
    <div class="form-group">
      <%= button_tag 'Expand all', id: 'expand-tree', class: 'btn btn-default' %>
      <%= button_tag 'Collapse all', id: 'collapse-tree', class: 'btn btn-default hidden' %>
    </div>
  </div>
</div>
<div id="tree">
</div>

<% if false %>
    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Parent</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @all_categories.each do |category| %>
          <% next if category.root? %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= category.parent.name #unless category.parent.nil?
              %>
            </td>
            <td><%= link_to 'Show', admin_category_path(category) %></td>
            <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
            <td><%= link_to 'Destroy', admin_category_path(category), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Category', new_admin_category_path %>
<% end %>